{
  "name": "@kimdw-rtk/animation",
  "version": "0.1.4",
  "private": false,
  "main": "./src/index.ts",
  "type": "module",
  "imports": {
    "#*": [
      "./src/*/index.ts",
      "./src/*/index.tsx",
      "./src/*.ts",
      "./src/*.tsx"
    ]
  },
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "test": "node -e \"process.exit(0)\"",
