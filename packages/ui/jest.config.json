{
  "testEnvironment": "jsdom",
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
  "transform": {
    "\\.css\\.ts$": "@vanilla-extract/jest-transform",
    "^.+\\.(ts|tsx)?$": "ts-jest",
    "^.+\\.[t|j]sx?$": "babel-jest"
  },
  "moduleNameMapper": {
    "@/styleUtils": "<rootDir>/src/utils/styleUtils.css.ts",
    "@/(.*)$": "<rootDir>/src/$1"
  },
  "testPathIgnorePatterns": ["/node_modules/", "/dist/"]
}
