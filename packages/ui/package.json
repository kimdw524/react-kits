{
  "name": "@kimdw-rtk/ui",
  "version": "0.1.12",
  "private": false,
  "type": "module",
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc --noEmit",
    "test": "jest --verbose",
    "build": "rollup -c rollup.config.js"
  },
  "imports": {
    "#*": "./src/*/index.ts",
    "#styleUtils": "./src/utils/styleUtils.css.ts"
  },
  "exports": {
    ".": "./src/index.ts",
    "./theme": "./src/themes/theme.css.ts",
    "./token": "./src/tokens/index.ts"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "@testing-library/user-event": "^14.6.1",
    "@vanilla-extract/css": "^1.17.0",
    "@vanilla-extract/dynamic": "^2.1.0",
    "@vanilla-extract/recipes": "^0.5.0",
    "@vanilla-extract/sprinkles": "^1.6.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.503.0"
  },
  "peerDependencies": {
    "@kimdw-rtk/animation": "workspace:^",
    "@kimdw-rtk/utils": "workspace:*",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.27.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.2",
    "@rollup/plugin-typescript": "^12.1.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@turbo/gen": "^2.4.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "@types/react": "^18.0.0 || ^19.0.0",
    "@types/react-dom": "^18.0.0 || ^19.0.0",
    "@vanilla-extract/jest-transform": "^1.1.14",
    "@vanilla-extract/rollup-plugin": "^1.4.1",
    "eslint": "^9.22.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rollup": "^4.52.4",
    "rollup-plugin-preserve-directives": "^0.4.0",
    "ts-jest": "^29.3.4",
    "typescript": "5.8.2"
  },
  "publishConfig": {
    "access": "public",
    "imports": {
      "#*": "./dist/*/index.js"
    },
    "exports": {
      ".": {
        "import": "./dist/index.js",
        "require": "./dist/index.cjs",
        "types": "./dist/index.d.ts"
      },
      "./theme": {
        "import": "./dist/themes/index.js",
        "require": "./dist/themes/index.cjs",
        "types": "./dist/themes/index.d.ts"
      },
      "./token": {
        "import": "./dist/tokens/index.js",
        "require": "./dist/tokens/index.cjs",
        "types": "./dist/tokens/index.d.ts"
      }
    }
  }
}
